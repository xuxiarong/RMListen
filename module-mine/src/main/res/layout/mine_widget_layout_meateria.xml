<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_widget_common_material_name"
        style="@style/BusinessTextStyleFirst_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:text="名字" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mine_widget_common_material_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dp_16"
        android:src="@drawable/icon_arrow_right" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mine_widget_common_material_user_icon"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_toStartOf="@id/mine_widget_common_material_icon"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mine_widget_common_material_user_text"
        style="@style/BusinessTextStyleThird_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_toStartOf="@id/mine_widget_common_material_icon"
        android:layout_toEndOf="@id/mine_widget_common_material_name"
        android:gravity="end"
        android:singleLine="true"
        android:visibility="gone"
        tools:text="123"
        tools:visibility="visible" />
</merge>