<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 用户/主播详情 -->
    <data>

        <variable
            name="viewModel"
            type="com.rm.module_mine.viewmodel.MineMemberViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_mine_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/img_my_bac" />

        <View
            android:id="@+id/mine_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/img_mine_background" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_mine_member_icon"
            bindUrl="@{viewModel.detailInfoData.avatar_url}"
            isCircle="@{true}"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84"
            android:background="@drawable/business_shape_circle_white"
            app:layout_constraintBottom_toBottomOf="@id/mine_view"
            app:layout_constraintStart_toStartOf="@id/mine_view"
            app:layout_constraintTop_toTopOf="@id/mine_view"
            tools:src="@mipmap/mine_ic_launcher" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@{viewModel.detailInfoData.nickname}"
            android:textColor="@color/business_text_color_333333"
            android:textSize="@dimen/business_text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/mine_view"
            tools:text="iphone12发布会我不想关注" />
        <!-- android:text="@{viewModel.detailInfoData.member_intro}" -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_mine_member_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_16"
            android:textColor="@color/business_text_color_666666"
            android:textSize="@dimen/business_text_size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/img_mine_member_icon"
            android:text="iphone12发布会我不想关注，我更关注的是iphone12Pro带来视觉，触碰的手感" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:drawablePadding="@dimen/dp_2"
            android:drawableStart="@drawable/mine_icon_certification_eh"
            android:text="@string/mine_certified_anchor"
            app:layout_constraintStart_toStartOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_mine_member_follows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_41"
            android:text="@{viewModel.memberFollows}"
            app:layout_constraintStart_toStartOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_content"
            tools:text="关注:456" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_mine_member_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_41"
            android:text="@{viewModel.memberFans}"
            app:layout_constraintStart_toEndOf="@id/tx_mine_member_follows"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_content"
            tools:text="粉丝:456" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/business_shape_round_ff5e5e"
            android:button="@null"
            android:drawableStart="@drawable/mine_member_attention_selected"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:text="关注"
            android:textColor="@color/mine_member_color"
            app:layout_constraintBottom_toBottomOf="@id/tx_mine_member_follows"
            app:layout_constraintEnd_toEndOf="@id/tx_mine_member_content"
            app:layout_constraintTop_toTopOf="@id/tx_mine_member_follows"
            tools:text="关注" />
        <com.rm.business_lib.wedgit.DashLineView
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_follows"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mine_detail_title_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.finish()}"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_9"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_9"
                android:src="@drawable/base_icon_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"
                android:textColor="@color/business_text_color_333333"
                android:textSize="@dimen/business_text_size_18sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/home_detail_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_detail_back" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_9"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_9"
                android:src="@mipmap/mine_ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@+id/maskView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#80000000"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        layout="@layout/activity_mine_member_booklist"
        app:viewModel="@{viewModel}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

