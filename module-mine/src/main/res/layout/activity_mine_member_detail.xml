<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<!-- 用户/主播详情 -->
    <data>
        <variable
            name="viewModel"
            type="com.rm.module_mine.viewmodel.MineMemberViewModel"/>
        <variable
            name="bean"
            type="com.rm.module_mine.bean.MineInfoDetail"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_mine_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@mipmap/img_my_bac"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"/>
        <View
            android:id="@+id/mine_view"
            app:layout_constraintTop_toBottomOf="@id/img_mine_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_mine_member_icon"
            bindUrl="@{bean.avatar_url}"
            app:layout_constraintTop_toTopOf="@id/mine_view"
            app:layout_constraintBottom_toBottomOf="@id/mine_view"
            app:layout_constraintStart_toStartOf="@id/mine_view"
            isCircle="@{true}"
            android:background="@drawable/business_shape_circle_white"
            tools:src="@mipmap/mine_ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toEndOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/mine_view"
            android:textColor="@color/business_text_color_333333"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/business_text_size_18sp"
            tools:text="iphone12发布会我不想关注"
            android:text="@{bean.nickname}"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_mine_member_content"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/img_mine_member_icon"
            android:textColor="@color/business_text_color_666666"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/business_text_size_12sp"
            tools:text="iphone12发布会我不想关注，我更关注的是iphone12Pro带来视觉，触碰的手感"
            android:text="@{bean.member_intro}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toStartOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/mine_icon_certification_eh"
            android:visibility="@{viewModel.getCertified,default=visible}"
            android:text="@string/mine_certified_anchor"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_41"
            app:layout_constraintStart_toStartOf="@id/img_mine_member_icon"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_content"
            android:id="@+id/tx_mine_member_follows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="关注:456"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_41"
            app:layout_constraintTop_toBottomOf="@id/tx_mine_member_content"
            app:layout_constraintStart_toEndOf="@id/tx_mine_member_follows"
            android:id="@+id/tx_mine_member_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            tools:text="粉丝:456"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            app:layout_constraintTop_toTopOf="@id/tx_mine_member_follows"
            app:layout_constraintBottom_toBottomOf="@id/tx_mine_member_follows"
            app:layout_constraintEnd_toEndOf="@id/tx_mine_member_content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/business_shape_round_ff5e5e"
            android:button="@null"
            android:drawableStart="@drawable/mine_member_attention_selected"
            android:drawablePadding="@dimen/dp_8"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:gravity="center"
            android:text="关注"
            tools:text="关注"
            android:textColor="@color/mine_member_color"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

