<resources>
    <style name="Mine_Article_text" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8e9dac</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="MineTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/Mine_Error_Text</item>
    </style>

    <style name="Mine_Error_Text">
        <item name="android:textColor">@color/mine_red</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>