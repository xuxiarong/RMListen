<resources>

    <style name="MineAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mine_colorPrimary</item>
        <item name="colorPrimaryDark">@color/mine_colorPrimaryDark</item>
        <item name="colorAccent">@color/mine_colorAccent</item>
        <item name="drawerArrowStyle">@style/MineDrawerArrowStyle</item>
    </style>

    <style name="MineDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/mine_white</item>
    </style>

    <style name="Mine_Article_text" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8e9dac</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="MineTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/Mine_Error_Text</item>
    </style>

    <style name="Mine_Error_Text">
        <item name="android:textColor">@color/mine_red</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>