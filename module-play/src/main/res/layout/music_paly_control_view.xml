<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />

        <variable
            name="itemModel"
            type="com.rm.module_play.model.PlayControlModel" />
    </data>

    <RelativeLayout
        android:id="@+id/music_paly_control"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_music_play_left"
            app:bindClick="@{viewModel.playManger.playLastMusic}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/music_play_ic_icon_bf"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/rl_music_paly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:ignore="MissingConstraints">

            <ProgressBar
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/music_play_progressbar" />

            <com.rm.module_play.view.PlayButtonView
                android:id="@+id/music_play_button"
                bindDingtoggleState="@{viewModel.playOrPause}"
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                app:pauseButtonTint="@color/business_text_color_ffffff"
                app:playButtonTint="@color/business_text_color_ffffff"
                app:progressTrackColor="@color/business_color_ff5e5e"
                app:showProgressTrack="true" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_music_play_right"
            bindClick="@{viewModel.playManger.playNextMusic}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/music_play_ic_icon_bc"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
</layout>