<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />

        <variable
            name="itemModel"
            type="com.rm.module_play.model.PlayControlModel" />
    </data>

    <RelativeLayout
        android:id="@+id/music_paly_control"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_music_play_left"
            bindLastSrc="@{viewModel.lastState}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            app:bindClick="@{viewModel.playManger.playLastMusic}"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/rl_music_paly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:ignore="MissingConstraints">

            <ProgressBar
                android:id="@+id/progress_play"
                isVisible="@{viewModel.playSate==1}"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/music_play_progressbar" />


            <com.flyco.roundview.RoundFrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                app:rv_backgroundColor="@color/business_color_ff5e5e"
                app:rv_cornerRadius="40dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    bindClick="@{viewModel.playManger.playOrPause}"
                    playState="@{viewModel.playSate}"
                    android:layout_width="29dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    app:lottie_fileName="play_stop.json" />
            </com.flyco.roundview.RoundFrameLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_music_play_right"
            bindClick="@{viewModel.playManger.playNextMusic}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/music_play_ic_icon_bc"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
</layout>