<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />

        <import type="android.text.TextUtils" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.rm.business_lib.wedgit.swipleback.SwipeBackLayout
            android:id="@+id/swipe_back_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/report_why_arrow"
                        bindClick="@{()->viewModel.finishActivity(viewModel.ACTION_MORE_FINSH+viewModel.curTime)}"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_10"
                        android:rotation="270"
                        android:src="@drawable/base_icon_back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@drawable/music_ic_icon_share_bc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/play_main_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/report_why_arrow"
                        tools:context=".activity.PlayActivity">

                        <FrameLayout
                            android:id="@+id/playAudioCover"
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="48dp"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_img_layout"
                                bindUrl="@{viewModel.playAudioModel.audio_cover_url}"
                                corner="@{8f}"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_GET_PLAYINFO_LIST+viewModel.curTime)}"
                                android:scaleType="fitXY"
                                tools:layout_editor_absoluteX="49dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/business_shape_gradient_0000000_66000000" />

                            <androidx.appcompat.widget.AppCompatTextView
                                bindPlayCountString="@{viewModel.playChapter.play_count}"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_28"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="8dp"
                                android:drawableStart="@drawable/ic_icon_play_ed"
                                android:drawablePadding="3dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/business_text_color_ffffff"
                                android:textSize="12sp"
                                tools:ignore="MissingConstraints,RtlHardcoded"
                                tools:text="133" />
                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/playChapterName"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@{viewModel.playChapter.chapter_name}"
                            android:textColor="@color/business_text_color_333333"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/playAudioCover"
                            tools:ignore="MissingConstraints"
                            tools:text="与罗摩相遇" />

                        <RelativeLayout
                            android:id="@+id/playAudioName"
                            isVisible="@{TextUtils.isEmpty(viewModel.seekText)}"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_11"
                            android:layout_marginEnd="@dimen/dp_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/playChapterName"
                            tools:ignore="MissingConstraints">

                            <View
                                android:id="@+id/playCenter"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:layout_centerInParent="true" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/playChapterNext"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_22"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:layout_toStartOf="@+id/playCenter"
                                android:onClick="@{(Context)->viewModel.audioNameClick(context)}"
                                android:src="@drawable/business_ic_next" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_music_title"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/playChapterNext"
                                android:ellipsize="end"
                                android:lines="1"
                                android:onClick="@{(Context)->viewModel.audioNameClick(context)}"
                                android:text="@{viewModel.playAudioModel.audio_name}"
                                android:textColor="@color/business_text_color_666666"
                                tools:text="《与罗摩相遇》第一章《与罗摩相遇》第一章《与罗摩相遇》第一章 " />


                            <com.flyco.roundview.RoundFrameLayout
                                android:layout_width="82dp"
                                android:layout_height="26dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/playCenter"
                                app:rv_cornerRadius="18dp"
                                app:rv_strokeColor="@color/stroke_color"
                                app:rv_strokeWidth="1dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_8"
                                    android:src="@drawable/business_icon_unfavorites" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="26dp"
                                    android:layout_marginStart="24dp"
                                    android:gravity="center"
                                    android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_JOIN_LISTEN+viewModel.curTime)}"
                                    android:text="@string/business_join_listen_list"
                                    android:textColor="@color/business_text_color_666666"
                                    android:textSize="12sp" />

                            </com.flyco.roundview.RoundFrameLayout>

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            isVisible="@{!TextUtils.isEmpty(viewModel.seekText)}"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_26"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_11"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:gravity="center"
                            android:text="@{viewModel.seekText}"
                            android:textSize="@dimen/business_text_size_18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/playChapterName"
                            tools:text="00:12/00:12" />

                        <com.rm.module_play.view.BubbleSeekBar
                            android:id="@+id/bsb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:paddingTop="7dp"
                            android:visibility="gone"
                            app:bsb_bubble_color="@color/base_b1b1b1"
                            app:bsb_bubble_text_color="@color/business_text_color_ffffff"
                            app:bsb_hide_bubble="true"
                            app:bsb_max="100"
                            app:bsb_min="0"
                            app:bsb_progress="0"
                            app:bsb_second_track_color="@color/base_ff5e5e"
                            app:bsb_second_track_size="4.5dp"
                            app:bsb_section_text_position="bottom_sides"
                            app:bsb_show_progress_in_float="true"
                            app:bsb_show_section_text="true"
                            app:bsb_show_thumb_text="true"
                            app:bsb_thumb_radius="@dimen/dp_8"
                            app:bsb_track_color="@color/business_color_f0f0f0"
                            app:bsb_track_size="4.5dp"
                            app:layout_constraintLeft_toRightOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/playAudioName" />

                        <RelativeLayout
                            android:id="@+id/music_play_process_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_48"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/playChapterName"
                            tools:ignore="MissingConstraints">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_music_left_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:drawableStart="@drawable/music_play_ic_icon_playing_left_light"
                                android:drawablePadding="3dp"
                                android:gravity="center"
                                android:onClick="@{()->viewModel.playManger.seekTo(viewModel.playManger.getCurDurtion() - 1000 * 15)}"
                                android:text="@string/play_skip_15_second"
                                android:textColor="@color/business_text_color_666666"
                                android:textSize="@dimen/business_text_size_10sp" />

                            <com.rm.business_lib.wedgit.seekbar.BubbleSeekBar
                                android:id="@+id/music_play_bubbleSeekBar"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tv_music_left_next"
                                app:barHeight="4dp"
                                app:min="0.0"
                                app:progressChangedListener="@{viewModel.seekChangeVar}"
                                app:secondTrack="@drawable/track_s"
                                app:setProgress="@{viewModel.process}"
                                app:setProgressMax="@{viewModel.maxProcess}"
                                app:thumb="@drawable/thumb"
                                app:thumbHeight="20dp"
                                app:thumbTextColor="#FFFFFFFF"
                                app:thumbTextSize="10dp"
                                app:thumbWidth="60dp"
                                app:track="@drawable/track"
                                app:updateThumbText="@{viewModel.updateThumbText}" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_music_right_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/music_play_bubbleSeekBar"
                                android:drawableEnd="@drawable/music_play_ic_icon_playing_right_light"
                                android:drawablePadding="3dp"
                                android:gravity="center"
                                android:onClick="@{()->viewModel.playManger.seekTo(viewModel.playManger.getCurDurtion() + 1000 * 15)}"
                                android:text="@string/play_skip_15_second"
                                android:textColor="@color/business_text_color_666666"
                                android:textSize="@dimen/business_text_size_10sp" />
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/play_main_header_control_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="82dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/music_play_process_time"
                            tools:ignore="MissingConstraints">

                            <!--                        <androidx.appcompat.widget.AppCompatImageView-->
                            <!--                            android:id="@+id/image_music_play_book_list"-->
                            <!--                            android:layout_width="@dimen/dp_24"-->
                            <!--                            android:layout_height="@dimen/dp_24"-->
                            <!--                            android:layout_gravity="center_vertical"-->
                            <!--                            android:layout_marginEnd="35dp"-->
                            <!--                            android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_PLAY_QUEUE+viewModel.curTime)}"-->
                            <!--                            android:src="@drawable/music_play_ic_icon_list_ce" />-->

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_music_play_book_list"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="35dp"
                                android:onClick="@{()->viewModel.showChapterListDialog(context)}"
                                android:src="@drawable/music_play_ic_icon_list_ce" />

                            <RelativeLayout
                                android:id="@+id/music_paly_control"
                                android:layout_width="200dp"
                                android:layout_height="82dp"
                                android:layout_gravity="center_vertical">


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_music_play_left"
                                    bindPlayPreSrc="@{viewModel.hasPreChapter}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:onClick="@{()->viewModel.playPreClick()}"
                                    android:padding="10dp"
                                    tools:ignore="MissingConstraints" />

                                <FrameLayout
                                    android:id="@+id/rl_music_paly_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    tools:ignore="MissingConstraints">

                                    <com.rm.baselisten.view.progressbar.CircularProgressView
                                        android:id="@+id/progress_play"
                                        bindPlayPrepareProgress="@{viewModel.playStatusBean}"
                                        android:layout_width="66dp"
                                        android:layout_height="66dp"
                                        android:layout_gravity="center"
                                        app:backColor="@color/business_color_f7f7f7"
                                        app:backWidth="1dp"
                                        app:progColor="@color/base_ff5e5e"
                                        app:progWidth="1dp"
                                        tools:progress="65" />

                                    <com.flyco.roundview.RoundFrameLayout
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        android:layout_gravity="center"
                                        app:rv_backgroundColor="@color/business_color_ff5e5e"
                                        app:rv_isRadiusHalfHeight="true">

                                        <com.rm.module_play.view.PlayControlView
                                            android:id="@+id/animation_view"
                                            bindPlayControl="@{viewModel.playStatusBean}"
                                            bindPlayControlClick="@{viewModel.playManger.playOrPause}"
                                            android:layout_width="@dimen/dp_56"
                                            android:layout_height="@dimen/dp_56"
                                            android:layout_gravity="center" />
                                    </com.flyco.roundview.RoundFrameLayout>

                                </FrameLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_music_play_right"
                                    bindPlayNextSrc="@{viewModel.hasNextChapter}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:onClick="@{()->viewModel.playNextClick()}"
                                    android:padding="10dp"
                                    tools:ignore="MissingConstraints" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="34dp"
                                android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_PLAY_OPERATING+viewModel.curTime)}"
                                android:orientation="vertical">

                                <com.flyco.roundview.RoundTextView
                                    bindPlaySpeedText="@{viewModel.playSpeed}"
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_14"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:gravity="center"
                                    android:textColor="@color/business_text_color_b1b1b1"
                                    android:textSize="@dimen/business_text_size_8sp"
                                    app:rv_cornerRadius="@dimen/dp_2"
                                    app:rv_strokeColor="@color/business_text_color_b1b1b1"
                                    app:rv_strokeWidth="@dimen/dp_1"
                                    tools:text="HD" />

                                <com.rm.business_lib.wedgit.menupoint.MenuPointView
                                    android:id="@+id/music_play_point"
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    app:menu_number="3"
                                    app:menu_point_color="@color/business_text_color_666666"
                                    app:menu_point_width="3dp"
                                    app:menu_type="horizontal"
                                    tools:visibility="visible" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="@dimen/dp_26"
                                    android:layout_height="@dimen/dp_14"
                                    android:gravity="center"
                                    android:text="@{viewModel.countdownTime}"
                                    android:textColor="@color/business_text_color_b1b1b1"
                                    android:textSize="@dimen/business_text_size_10sp"
                                    tools:text="18:23" />

                            </LinearLayout>
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/play_main_header_subscriber_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:background="@drawable/shape_radius_f7f7f7"
                            app:layout_constraintTop_toBottomOf="@id/play_main_header_control_layout"
                            tools:ignore="MissingConstraints">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/play_main_header_anchor_name"
                                bindText="@{viewModel.playAudioModel.anchor.anchor_name}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:singleLine="true"
                                android:textColor="@color/business_text_color_333333"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toStartOf="@id/play_main_header_anchor_subscriber"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="123" />

                            <androidx.appcompat.widget.AppCompatTextView
                                bindPlayCountString="@{viewModel.playAudioModel.subscription_count}"
                                bindPlayCountUnit="@{@string/play_subscriber_num}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:singleLine="true"
                                android:textColor="@color/business_text_color_999999"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toStartOf="@id/play_main_header_anchor_subscriber"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/play_main_header_anchor_name"
                                tools:text="123" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/play_main_header_anchor_subscriber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@{viewModel.isSubscribe ? @drawable/business_attention_un_select  : @drawable/business_attentionselect}"
                                android:onClick="@{()->viewModel.clickPlaySubAction(context)}"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingEnd="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_5"
                                android:text="@{viewModel.isSubscribe ? @string/business_subscribed : @string/business_subscribe}"
                                android:textColor="@{viewModel.isSubscribe ? @color/business_text_color_666666 : @color/business_color_ff5e5e}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_detail_anchor_cl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:background="@drawable/shape_radius_f7f7f7"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/play_main_header_subscriber_layout">

                            <!-- 主播 -->
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/home_detail_anchor_url"
                                bindUrl="@{viewModel.playAudioModel.anchor.anchor_avatar}"
                                isCircle="@{true}"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:onClick="@{()->viewModel.clickMemberFun(context)}"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="#3f00" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/home_detail_anchor_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:singleLine="true"
                                android:text="@{viewModel.playAudioModel.anchor.anchor_name}"
                                android:textColor="@color/business_text_color_333333"
                                android:textSize="@dimen/business_text_size_14sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="@id/detail_anchor_attention"
                                app:layout_constraintStart_toEndOf="@id/home_detail_anchor_url"
                                app:layout_constraintTop_toTopOf="@id/home_detail_anchor_url"
                                tools:text="@string/app_name" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/home_detail_anchor_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:background="@drawable/business_shape_stroke_rect_ffba56"
                                android:paddingStart="@dimen/dp_4"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingEnd="@dimen/dp_4"
                                android:paddingBottom="@dimen/dp_2"
                                android:textColor="@color/business_color_ffba56"
                                android:textSize="@dimen/business_text_size_8sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@id/home_detail_anchor_name"
                                tools:text="1243" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:background="@drawable/business_shape_stroke_rect_ffba56"
                                android:paddingStart="@dimen/dp_4"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingEnd="@dimen/dp_4"
                                android:paddingBottom="@dimen/dp_2"
                                android:textColor="@color/business_color_ffba56"
                                android:textSize="@dimen/business_text_size_8sp"
                                app:layout_constraintBottom_toBottomOf="@id/home_detail_anchor_tips"
                                app:layout_constraintStart_toEndOf="@id/home_detail_anchor_tips"
                                app:layout_constraintTop_toTopOf="@id/home_detail_anchor_tips"
                                tools:text="1244" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/detail_anchor_attention"
                                isVisible="@{viewModel.attentionVisibility}"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_26"
                                android:background="@{viewModel.isAttention ? @drawable/business_attention_un_select  : @drawable/business_attentionselect}"
                                android:drawableStart="@{viewModel.isAttention ? @drawable/business_icon_attention_eb : @drawable/business_icon_attention_ea}"
                                android:drawablePadding="@dimen/dp_4"
                                android:onClick="@{()->viewModel.clickAttentionFun(context,viewModel.playAudioModel.member_id)}"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingEnd="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_5"
                                android:text="@{viewModel.isAttention ? @string/business_followed : @string/business_attention}"
                                android:textColor="@{viewModel.isAttention ? @color/business_text_color_666666 : @color/business_color_ff5e5e}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_detail_drag_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:background="@color/business_text_color_ffffff"
                            app:layout_constraintTop_toBottomOf="@id/home_detail_anchor_cl">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/detail_comment_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.commentTotal>99?@string/business_comment_num:@string/business_comment(viewModel.commentTotal)}"
                                android:textColor="@color/business_text_color_333333"
                                android:textSize="@dimen/business_text_size_16sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_18"
                                android:background="@drawable/business_shape_round_f7f7f7_12dp"
                                android:hint="@string/business_comment_hint"
                                android:onClick="@{()->viewModel.clickCommentFun(context)}"
                                android:paddingStart="@dimen/dp_12"
                                android:paddingTop="@dimen/dp_9"
                                android:paddingEnd="@dimen/dp_12"
                                android:paddingBottom="@dimen/dp_9"
                                android:textColor="@color/business_text_color_333333"
                                android:textSize="@dimen/business_text_size_14sp"
                                app:layout_constraintTop_toBottomOf="@id/detail_comment_title" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.scwang.smart.refresh.layout.SmartRefreshLayout
                        bindIsHasMoreData="@{viewModel.commentRefreshModel.isHasMore()}"
                        bindIsLoadMoreSuccess="@{viewModel.commentRefreshModel.isLoadMoreSuccess()}"
                        bindOnLoadMoreListener="@{viewModel.commentLoadData}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/base_activity_bg_color"
                        app:layout_constraintTop_toBottomOf="@id/play_main_header"
                        app:srlEnableRefresh="false"
                        tools:ignore="MissingConstraints">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_music_play"
                            bindVerticalLayout="@{viewModel.mCommentAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </com.rm.business_lib.wedgit.swipleback.SwipeBackLayout>

        <com.rm.baselisten.view.DragCloseLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:visibility="gone"
            isVisible="@{viewModel.showChapter}"
            bindDragOpen="@{viewModel.showChapter}"
            android:layout_gravity="bottom">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="550dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/business_dialog_top_9bg" />

                <com.flyco.roundview.RoundFrameLayout
                    android:layout_width="50dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    app:rv_backgroundColor="@color/business_color_b1b1b1"
                    app:rv_cornerRadius="5dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_42"
                    android:background="@color/businessWhite"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:drawablePadding="4dp"
                        android:textColor="@color/business_text_color_666666"
                        android:textSize="14sp"
                        tools:text="顺序播放" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_gravity="end"
                        android:layout_marginEnd="58dp"
                        android:src="@drawable/music_play_ic_icon_download_de" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:drawableStart="@drawable/home_detail_chapter_ce" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_76"
                    android:background="@color/business_color_e8e8e8" />

                <com.scwang.smart.refresh.layout.SmartRefreshLayout
                    android:id="@+id/play_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_77">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_music_play_book_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        bindVerticalLayout="@{viewModel.chapterListAdapter}"
                        android:overScrollMode="never" />
                </com.scwang.smart.refresh.layout.SmartRefreshLayout>

            </FrameLayout>

        </com.rm.baselisten.view.DragCloseLayout>

    </FrameLayout>

</layout>