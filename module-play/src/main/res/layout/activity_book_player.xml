<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_play"
        android:layout_width="match_parent"
        android:background="@color/businessWhite"
        android:layout_height="match_parent">
    <com.yinglan.scrolllayout.ScrollLayout
        android:id="@+id/scroll_down_layout"
        android:layout_width="match_parent"
        android:background="@color/businessWhite"
        android:layout_height="match_parent">

        <com.rm.module_play.view.ContentRecyclerView
            android:id="@+id/rv_music_play"
            android:layout_width="match_parent"
            bindVerticalLayout="@{viewModel.mBookPlayerAdapter}"
            android:layout_height="match_parent" />

    </com.yinglan.scrolllayout.ScrollLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>