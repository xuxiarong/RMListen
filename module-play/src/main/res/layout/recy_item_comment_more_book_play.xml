<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />
        <variable
            name="itemModel"
            type="com.rm.module_play.model.PlayControlCommentTitleModel" />
    </data>

    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/business_text_color_333333"
            android:textSize="16sp"
            android:text="评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/business_text_color_333333"
            android:textSize="16sp"
            android:text="更多"
            android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_MORE_COMMENT)}"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rm.business_lib.wedgit.arrow.ArrowView
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_22"
            android:layout_marginStart="@dimen/dp_12"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_7"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_7"
            app:arrow_direction="right"
            app:arrow_line_color="@color/business_text_color_333333" />

    </RelativeLayout>
</layout>