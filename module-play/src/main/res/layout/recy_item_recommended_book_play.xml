<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />
        <variable
            name="itemViewModel"
            type="com.rm.module_play.model.PlayControlRecommentModel" />

    </data>
    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_book_play_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精品推荐"
            android:textStyle="bold"
            android:textColor="@color/business_text_color_333333"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="13dp"
            android:layout_below="@+id/tv_book_play_recommended"
            android:id="@+id/recy_item_book_play_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>