<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="itemModel"
            type="com.rm.module_play.model.PlayControlModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PlayActivity">

        <RelativeLayout
            android:id="@+id/rl_music_playe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <com.rm.business_lib.wedgit.arrow.ArrowView
                android:id="@+id/report_why_arrow"
                android:layout_width="20dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                app:arrow_direction="bottom"
                app:arrow_line_color="@color/business_text_color_333333"
                app:arrow_width="2dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/music_ic_icon_share_bc" />
        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/rl_music_playe_title"
            android:id="@+id/iv_img_layout"
            />


        <TextView
            android:id="@+id/fl_music_playe_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="《与罗摩相遇》第一章"
            android:textColor="@color/business_text_color_333333"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_img_layout"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/rl_music_play_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_music_playe_page"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与罗摩相遇 >"
                android:textColor="@color/business_text_color_666666" />

            <com.flyco.roundview.RoundTextView
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/tv_music_title"
                android:gravity="center"
                android:text="加入听单"
                android:textColor="@color/business_text_color_666666"
                android:textSize="12sp"
                app:rv_cornerRadius="18dp"
                app:rv_strokeColor="@color/stroke_color"
                app:rv_strokeWidth="1dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_music_play_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_music_play_titles"
            tools:ignore="MissingConstraints">

            <include layout="@layout/music_play_process_time" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_music_play_process"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/image_music_play_book_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="35dp"
                android:src="@drawable/music_play_ic_icon_list_ce" />

            <include layout="@layout/music_paly_control_view"
                android:layout_width="200dp"
                android:layout_height="66dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:orientation="vertical">

                <com.rm.business_lib.wedgit.menupoint.MenuPointView
                    android:id="@+id/music_play_point"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:menu_number="3"
                    app:menu_point_color="@color/business_text_color_333333"
                    app:menu_point_width="3dp"
                    app:menu_type="horizontal"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bt_get_book_list"
            android:layout_width="100dip"
            android:layout_height="40dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>