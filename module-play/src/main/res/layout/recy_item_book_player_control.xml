<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rm.module_play.viewmodel.PlayViewModel" />

        <variable
            name="itemModel"
            type="com.rm.module_play.model.PlayControlModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.PlayActivity">

        <RelativeLayout
            android:id="@+id/rl_music_playe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <com.rm.business_lib.wedgit.arrow.ArrowView
                android:id="@+id/report_why_arrow"
                bindClick="@{()->viewModel.finshActivity(viewModel.ACTION_MORE_FINSH+viewModel.curTime)}"
                android:layout_width="20dp"
                android:layout_height="13dp"
                android:layout_marginStart="5dp"
                app:arrow_direction="bottom"
                app:arrow_line_color="@color/business_text_color_333333"
                app:arrow_width="2dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/music_ic_icon_share_bc" />
        </RelativeLayout>


        <FrameLayout
            android:id="@+id/fl_img_layout"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_music_playe_title"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_img_layout"
                bindUrl="@{itemModel.homeDetailModel.audio_cover_url}"
                corner="@{@dimen/dp_4}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_GET_PLAYINFO_LIST+viewModel.curTime)}"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="49dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="3dp"
                bindPlayCountString="@{viewModel.playControlModel.baseAudioInfo.playCount}"
                android:textColor="@color/business_text_color_ffffff"
                android:textSize="12sp"
                tools:ignore="MissingConstraints,RtlHardcoded"
                android:drawableStart="@drawable/ic_icon_play_ed" />
        </FrameLayout>


        <TextView
            android:id="@+id/fl_music_playe_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@{viewModel.playControlModel.baseAudioInfo.audioName}"
            android:textColor="@color/business_text_color_333333"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_img_layout"
            tools:ignore="MissingConstraints"
            tools:text="《与罗摩相遇》第一章" />

        <RelativeLayout
            android:id="@+id/rl_music_play_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_music_playe_page"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.playControlModel.baseAudioInfo.filename}"
                android:textColor="@color/business_text_color_666666"
                tools:text="与罗摩相遇 >" />

            <com.flyco.roundview.RoundTextView
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/tv_music_title"
                android:gravity="center"
                android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_JOIN_LISTEN+viewModel.curTime)}"
                android:text="加入听单"
                android:textColor="@color/business_text_color_666666"
                android:textSize="12sp"
                app:rv_cornerRadius="18dp"
                app:rv_strokeColor="@color/stroke_color"
                app:rv_strokeWidth="1dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_music_play_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_music_play_titles"
            tools:ignore="MissingConstraints">

            <include
                layout="@layout/music_play_process_time"
                app:viewModel="@{viewModel}" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_music_play_process"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/image_music_play_book_list"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="35dp"
                android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_PLAY_QUEUE+viewModel.curTime)}"
                android:src="@drawable/music_play_ic_icon_list_ce" />

            <include
                layout="@layout/music_paly_control_view"
                android:layout_width="200dp"
                android:layout_height="66dp"
                app:viewModel="@{viewModel}" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:orientation="vertical">

                <com.rm.business_lib.wedgit.menupoint.MenuPointView
                    android:id="@+id/music_play_point"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:onClick="@{()->viewModel.playControlAction(viewModel.ACTION_PLAY_OPERATING+viewModel.curTime)}"
                    app:menu_number="3"
                    app:menu_point_color="@color/business_text_color_333333"
                    app:menu_point_width="3dp"
                    app:menu_type="horizontal"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_get_book_list"
            android:layout_width="100dip"
            android:layout_height="40dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>