<?xml version="1.0" encoding="utf-8"?>
<animated-rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%"
    android:fromDegrees="0"
    android:toDegrees="360">

    <shape
        android:shape="ring"
        android:thickness="2dp"
        android:innerRadiusRatio="2.15"
        android:thicknessRatio="8"
        android:useLevel="false">
        <gradient

            android:type="sweep"
            android:useLevel="false"
            android:startColor="@color/business_text_color_ffffff"
            android:centerColor="@color/business_color_ff5e5e"
            android:centerY="0.50"
            android:endColor="@color/business_color_ff5e5e" />
    </shape>

</animated-rotate>