<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".test.TestActivity">
    <data>

        <variable
            name="viewModel"
            type="com.rm.listen.test.TestViewModel" />
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
     <TextView
         android:id="@+id/down_time"
         android:textColor="#ff00ff"
         android:gravity="center"
         android:layout_width="100dp"
         android:layout_height="50dp"
         tools:ignore="MissingConstraints" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_input"
            android:text="@={viewModel.downTime}"
            app:layout_constraintTop_toBottomOf="@+id/down_time"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/bt_start_dwon"
            android:text="开始"
            app:layout_constraintTop_toBottomOf="@+id/et_input"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:onClick="@{() -> viewModel.downTime()}"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>