<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rm.module_search">

    <application
        android:name="debug.SearchApplication"
        android:icon="@mipmap/search_ic_launcher"
        android:label="@string/search_app_name"
        android:theme="@style/BusinessAppTheme">
        <!-- ui适配设置-->
        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="812" />

        <activity android:name="debug.SearchMainDebugActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SearchResultActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>
</manifest>