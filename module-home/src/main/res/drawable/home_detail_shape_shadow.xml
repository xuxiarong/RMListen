<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。
    其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:top="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#0f000000"/>
            <corners
                android:topLeftRadius="@dimen/dp_24"
                android:topRightRadius="@dimen/dp_24" />
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，
    right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:top="10dp">
        <shape android:shape="rectangle" >

            <solid android:color="@color/businessWhite"/>

            <corners
                android:topLeftRadius="@dimen/dp_30"
                android:topRightRadius="@dimen/dp_30" />
        </shape>
    </item>

</layer-list>