<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dialogViewModel"
            type="com.rm.module_home.viewmodel.MenuDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/business_shape_white_top_radius_12dp"
        android:paddingTop="@dimen/dp_10">

        <View
            android:id="@+id/home_dialog_create_sheet_top_drag_line"
            style="@style/BusinessTopDragLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_dialog_create_sheet_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:text="@string/base_cancel"
            android:textColor="@color/business_text_color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_dialog_create_sheet_top_drag_line" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_dialog_create_sheet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_create_sheet_list"
            android:textColor="@color/business_color_0f0f0f"
            android:textSize="@dimen/business_text_size_18sp"
            app:layout_constraintBottom_toBottomOf="@id/home_dialog_create_sheet_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_dialog_create_sheet_cancel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_dialog_create_sheet_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_14"
            android:text="@string/base_sure"
            android:textColor="@color/business_color_ff5e5e"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_dialog_create_sheet_cancel" />


        <View
            android:id="@+id/home_dialog_create_sheet_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/business_color_e8e8e8"
            app:layout_constraintTop_toBottomOf="@id/home_dialog_create_sheet_cancel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_dialog_create_sheet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/home_title_text"
            android:textColor="@color/business_text_color_666666"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_dialog_create_sheet_line" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/home_dialog_create_sheet_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/business_shape_stroke_e8e8e8_8dp"
            android:hint="@string/home_input_title"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/home_dialog_create_sheet_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>