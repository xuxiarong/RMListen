<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.rm.module_home.viewmodel.HomeDetailViewModel1" />
    </data>

    <com.rm.module_home.widget.HomeDetailDragLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--标题栏-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_detail_title_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_9"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_9"
                android:src="@drawable/base_icon_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"
                android:textColor="@color/business_text_color_333333"
                android:textSize="@dimen/business_text_size_18sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/home_detail_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_detail_back" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_9"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_9"
                android:src="@drawable/home_icon_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--内容栏-->
        <com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_detail_title_cl">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_main_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_detail_icon"
                    bindUrl="@{viewModel.detailInfoData.list.audio_cover_url}"
                    corner="@{8.0f}"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/temp_detail_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    bindText="@{viewModel.detailInfoData.list.play_count}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:drawableStart="@drawable/home_icon_play_ed"
                    android:textColor="@color/businessWhite"
                    app:layout_constraintBottom_toBottomOf="@id/home_detail_icon"
                    app:layout_constraintEnd_toEndOf="@id/home_detail_icon"
                    tools:text="14W" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_audio_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:maxLines="2"
                    android:text="@{viewModel.detailInfoData.list.audio_name}"
                    android:textColor="@color/business_text_color_333333"
                    android:textSize="@dimen/business_text_size_18sp"
                    app:layout_constraintStart_toEndOf="@id/home_detail_icon"
                    app:layout_constraintTop_toTopOf="@id/home_detail_icon"
                    tools:text="书名" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/home_detail_icon_author_ee"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@{viewModel.detailInfoData.list.nickname}"
                    android:textColor="@color/business_text_color_666666"
                    android:textSize="@dimen/business_text_size_12sp"
                    app:layout_constraintStart_toStartOf="@id/home_detail_audio_name"
                    app:layout_constraintTop_toBottomOf="@id/home_detail_audio_name"
                    tools:text="作者：曹雪芹" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_anchor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/home_detail_icon_anchor_ee"
                    android:lines="1"
                    android:text="@{viewModel.detailInfoData.list.author}"
                    android:textColor="@color/business_text_color_666666"
                    android:textSize="@dimen/business_text_size_12sp"
                    app:layout_constraintStart_toStartOf="@id/home_detail_audio_name"
                    app:layout_constraintTop_toBottomOf="@id/home_detail_author"
                    tools:text="主播：小丸子的朋友" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/home_detail_btn_subscribe"
                    android:layout_width="141dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_26"
                    android:background="@drawable/shape_red_20"
                    android:gravity="center"
                    android:text="@string/home_detail_sub"
                    android:textColor="@color/businessWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/home_detail_icon"
                    app:layout_constraintStart_toStartOf="@id/home_detail_audio_name" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_detail_collect_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@drawable/shape_round"
                    android:src="@drawable/business_icon_favorites"
                    app:layout_constraintBottom_toBottomOf="@id/home_detail_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/home_detail_btn_subscribe" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_detail_tx_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_26"
                android:text="已连载12集"
                android:textColor="@color/business_text_color_666666" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_detail_tips_recycler_view"
                bindHorizontalLayout="@{viewModel.homeDetailTagsAdapter}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_14" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_detain_brief_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:text="@string/home_detail_brief_introduction"
                android:textColor="@color/business_text_color_333333"
                android:textSize="@dimen/business_text_size_16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_4" />

            <com.rm.business_lib.wedgit.expandtextview.ExpandableTextView
                android:id="@+id/home_detail_brief"
                expandText="@{viewModel.detailInfoData.list.short_intro}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:textColor="@color/business_text_color_666666"
                tools:text="@string/home_detail_brief_introduction" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_16" />

            <View
                android:id="@+id/home_detail_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0.5dp"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/business_color_e8e8e8"
                app:layout_constraintEnd_toEndOf="@id/home_detail_collect_icon"
                app:layout_constraintStart_toStartOf="@id/home_detail_icon"
                app:layout_constraintTop_toBottomOf="@id/home_detail_brief" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_16" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_detail_vip_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_detail_line">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="¥2"
                    android:textColor="@color/business_color_ff5e5e"
                    android:textSize="@dimen/business_text_size_26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / 集"
                    android:textColor="@color/business_text_color_333333"
                    android:textSize="@dimen/business_text_size_16sp"
                    app:layout_constraintBottom_toBottomOf="@id/home_detail_money"
                    app:layout_constraintStart_toEndOf="@+id/home_detail_money"
                    app:layout_constraintTop_toTopOf="@id/home_detail_money" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_free_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/business_shape_stroke_rect_ff5e5e"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="会员免费"
                    android:textColor="@color/business_color_ff5e5e"
                    android:textSize="@dimen/business_text_size_8sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_detail_money" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_hd_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:background="@drawable/business_shape_stroke_rect_ffba56"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="HD高清"
                    android:textColor="@color/business_color_ffba56"
                    android:textSize="@dimen/business_text_size_8sp"
                    app:layout_constraintStart_toEndOf="@id/home_detail_free_tips"
                    app:layout_constraintTop_toBottomOf="@id/home_detail_money" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@drawable/shape_round_empty_ff5e5e"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/home_detail_join_membership"
                    android:textColor="@color/business_color_ff5e5e"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/home_detail_join_membership" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_16" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_detail_anchor_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/shape_radius_f7f7f7"
                app:layout_constraintTop_toBottomOf="@id/home_detail_vip_cl">

                <!-- 主播 -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_detail_anchor_url"
                    isCircle="@{true}"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="#3f00" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_anchor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/business_text_color_333333"
                    android:textSize="@dimen/business_text_size_14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/home_detail_anchor_url"
                    app:layout_constraintTop_toTopOf="@id/home_detail_anchor_url"
                    tools:text="@string/app_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_detail_anchor_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@drawable/business_shape_stroke_rect_ffba56"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="热门主播"
                    android:textColor="@color/business_color_ffba56"
                    android:textSize="@dimen/business_text_size_8sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/home_detail_anchor_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:background="@drawable/business_shape_stroke_rect_ffba56"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="TOP10"
                    android:textColor="@color/business_color_ffba56"
                    android:textSize="@dimen/business_text_size_8sp"
                    app:layout_constraintBottom_toBottomOf="@id/home_detail_anchor_tips"
                    app:layout_constraintStart_toEndOf="@id/home_detail_anchor_tips"
                    app:layout_constraintTop_toTopOf="@id/home_detail_anchor_tips" />


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/detail_anthor_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_empty_ff5e5e"
                    android:button="@null"
                    android:drawableStart="@drawable/home_detail_attention_selected"
                    android:drawablePadding="@dimen/dp_4"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="关注"
                    android:textColor="@color/home_detail_member_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_16" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_detail_drag_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/business_text_color_ffffff"
                app:layout_constraintTop_toBottomOf="@id/home_detail_anchor_cl"
                app:layout_isSticky="true">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="@string/home_detail_comment"
                    android:textColor="@color/business_text_color_333333"
                    android:textSize="@dimen/business_text_size_16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_comment_more"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:drawableEnd="@drawable/icon_arrow_right"
                    android:drawablePadding="@dimen/dp_2"
                    android:gravity="center"
                    android:text="@string/home_detail_more"
                    android:textColor="@color/business_text_color_333333"
                    android:textSize="@dimen/business_text_size_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_detail_comment_recycle_view"
                bindVerticalLayout="@{viewModel.homeDetailCommentAdapter}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/home_detail_drag_layout" />


        </com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout>


        <!--可拖拽的章节列表-->
        <com.rm.module_home.widget.HomeDetailInterceptLayout
            android:id="@+id/home_detail_draggable_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/business_elevation_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_detail_title_cl">

            <View
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_21"
                android:background="@drawable/business_shape_round_b1b1b1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_detail_play_all_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_37"
                android:drawableStart="@drawable/home_detail_icon_all_play"
                android:drawablePadding="@dimen/dp_4"
                android:onClick="@{()->viewModel.clickPlayAll()}"
                android:text="@string/home_play_all"
                android:textColor="@color/home_detail_chapter_clickable_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/home_detail_play_all_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/home_detail_play_show"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginStart="108dp"
                android:button="@null"
                android:drawableEnd="@drawable/home_detail_fold"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_16"
                android:textColor="@color/business_text_color_666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_detail_play_all_tx" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_detail_play_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:src="@drawable/home_icon_chapter_download"
                app:layout_constraintEnd_toStartOf="@id/home_detail_play_show"
                app:layout_constraintTop_toTopOf="@id/home_detail_play_all_tx" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/home_detail_play_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/home_detail_chapter_ce"
                android:onClick="@{()->viewModel.clickSort()}"
                android:paddingEnd="@dimen/dp_10"
                app:layout_constraintEnd_toStartOf="@id/home_detail_play_download"
                app:layout_constraintTop_toTopOf="@id/home_detail_play_all_tx" />

            <View
                android:id="@+id/home_detail_play_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0.5dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/business_color_e8e8e8"
                app:layout_constraintTop_toBottomOf="@id/home_detail_play_all_tx" />

            <com.rm.module_home.widget.HomeDetailRecyclerView
                android:id="@+id/home_detail_draggable_rv"
                bindVerticalLayout="@{viewModel.chapterAdapter}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_detail_play_line" />
        </com.rm.module_home.widget.HomeDetailInterceptLayout>

    </com.rm.module_home.widget.HomeDetailDragLayout>
</layout>