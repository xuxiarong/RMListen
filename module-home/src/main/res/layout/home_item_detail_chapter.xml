<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name = "DetailChapterViewModel"
            type="com.rm.module_home.model.home.detail.ChapterList"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/detail_chapter_number_tx"
            android:textColor="@color/business_text_color_666666"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            tools:text="1"
            android:text="@{@string/str_str+DetailChapterViewModel.sequence}"
            android:gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toEndOf="@+id/detail_chapter_number_tx"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_8"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/business_text_color_333333"
            android:id="@+id/detail_chapter_name_tx"
            android:textSize="@dimen/business_text_size_16sp"
            android:text="@{DetailChapterViewModel.name}"
            tools:text="大标题三分地上范德萨发你的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="@+id/detail_chapter_name_tx"
            app:layout_constraintTop_toBottomOf="@+id/detail_chapter_name_tx"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_chapter_views_tx"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:drawableStart="@drawable/home_icon_chapter_play_count"
                android:textColor="@color/business_text_color_b1b1b1"
                android:textSize="@dimen/business_text_size_12sp"
                tools:text="14W"
                android:text="@{@string/str_str+DetailChapterViewModel.play_count}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_chapter_duration_tx"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:drawableStart="@drawable/home_icon_chapter_time"
                android:textColor="@color/business_text_color_b1b1b1"
                android:textSize="@dimen/business_text_size_12sp"
                tools:text="14:00"
                android:text="@{@string/str_str+DetailChapterViewModel.duration}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_chapter_upload_tx"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:drawableStart="@drawable/home_icon_chapter_day"
                android:textColor="@color/business_text_color_b1b1b1"
                android:textSize="@dimen/business_text_size_12sp"
                android:text="@{DetailChapterViewModel.created_at}"
                tools:text="2020/20/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detail_chapter_download_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/home_icon_chapter_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detail_chapter_vip_img"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintEnd_toStartOf="@+id/detail_chapter_download_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/home_icon_chapter_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>