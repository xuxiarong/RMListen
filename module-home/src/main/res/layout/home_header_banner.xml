<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_14">

    <com.rm.business_lib.xbanner.XBanner
        android:id="@+id/home_head_banner"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        app:AutoPlayTime="5000"
        app:clipChildrenTopBottomMargin="0dp"
        app:pageChangeDuration="1000"
        app:pointsPosition="CENTER"
        app:viewPagerClipChildren="true" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:src="@drawable/business_banner_bg" />
</FrameLayout>
