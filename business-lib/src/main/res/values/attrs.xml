<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomDrawer">
        <attr name="should_draw_under_status_bar" format="boolean" />
        <attr name="should_draw_content_under_handle_view" format="boolean" />
        <attr name="bottom_sheet_corner_radius" format="dimension" />
        <attr name="bottom_sheet_extra_padding" format="dimension" />
        <attr name="bottom_drawer_background" format="reference" />
        <attr name="content_view" format="reference" />
    </declare-styleable>

    <declare-styleable name="ScrollLayout">
        <attr name="minOffset" format="dimension" />
        <attr name="maxOffset" format="dimension" />
        <attr name="exitOffset" format="dimension" />
        <attr name="mode">
            <flag name="open" value="0x0" />
            <flag name="close" value="0x1" />
            <flag name="exit" value="0x2" />
        </attr>
        <attr name="allowHorizontalScroll" format="boolean" />
        <attr name="isSupportExit" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BendTabLayout">
        <attr name="bendTabIndicatorAnimation" format="boolean" /><!--指示器切换是否加载动画-->
        <attr name="bendTabIndicatorColor" format="color" /> <!--指示器颜色-->
        <attr name="bendTabIndicatorHeight" format="dimension" /> <!-- 指示器高度(可通过此属性去调整圆弧的弧度)-->
        <attr name="bendTabIndicatorWidth" format="dimension" /> <!-- 指示器的宽度-->
        <attr name="bendTabContentStart" format="dimension" /> <!--指示器内容距离左边的距离-->
        <attr name="bendTabBackground" format="reference" /> <!--整个tabLayout的背景-->
        <attr name="bendTabTextSize" format="dimension" /><!--指示器文本字体大小-->
        <attr name="bendTabMode"> <!--指示器显示模式-->
            <enum name="scrollable" value="0" /> <!-- 滚动-->
            <enum name="fixed" value="1" /> <!--填满-->
        </attr>
        <attr name="bendTabGravity">
            <enum name="fill" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="bendTabMinWidth" format="dimension" /><!--单个tab最小宽度-->
        <attr name="bendTabMaxWidth" format="dimension" /><!--单个tab最大宽度-->
        <attr name="bendTabSelectedTextColor" format="color" /> <!--tab选中时，文本的色值-->
        <attr name="bendTabUnSelectedTextColor" format="color" /><!--tab未选中时的文本色值-->
        <attr name="bendTabPaddingStart" format="dimension" />
        <attr name="bendTabPaddingTop" format="dimension" />
        <attr name="bendTabPaddingEnd" format="dimension" />
        <attr name="bendTabPaddingBottom" format="dimension" />
        <attr name="bendTabPadding" format="dimension" />
        <attr name="bendTabIndicatorStrokeWidth" format="dimension" /><!-- 线条粗细值-->
        <attr name="indicatorMarginTop" format="dimension" />
        <attr name="bendTabTextSelectIsBold" format="boolean"/><!--是否选中加粗-->
    </declare-styleable>

    <declare-styleable name="BendTabItem">
        <attr name="android:text" />
        <attr name="android:icon" />
        <attr name="android:layout" />
    </declare-styleable>
    <!--    自定义箭头的属性-->
    <declare-styleable name="round_style">
        <attr name="back_color" format="color|reference" />
        <attr name="stroke_color" format="color|reference" />
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_radius" format="dimension" />
        <attr name="is_circle" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ArrowView">
        <attr name="arrow_width" format="dimension" />
        <attr name="arrow_full" format="boolean" />
        <attr name="arrow_line_color" format="color|reference" />
        <attr name="arrow_direction" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
    <!--    播放器进度条自定义的属性-->
    <declare-styleable name="DaXuBubbleSeekBar">
        <attr name="min" format="float|reference" />
        <attr name="max" format="float|reference" />
        <attr name="thumbHeight" format="dimension|reference" />
        <attr name="thumbWidth" format="dimension|reference" />
        <attr name="thumbTextColor" format="color|reference" />
        <attr name="thumbTextSize" format="dimension|reference" />
        <attr name="barHeight" format="dimension|reference" />
        <attr name="track" format="reference" />
        <attr name="secondTrack" format="reference" />
        <attr name="thumb" format="reference" />
        <attr name="bubbleBackgroud" format="reference" />
        <attr name="bubbleWidth" format="dimension|reference" />
        <attr name="bubbleHeight" format="dimension|reference" />
        <attr name="bubbleOffset" format="dimension|reference" />
        <attr name="trackMarginLeft" format="dimension|reference" />
        <attr name="trackMarginRight" format="dimension|reference" />
    </declare-styleable>


    <!-- 阴影控件自定属性-->
    <declare-styleable name="ShadowLayout_Layout">
        <attr name="layout_shadowX" format="dimension|reference" />
        <attr name="layout_shadowY" format="dimension|reference" />
        <attr name="layout_shadowRadius" format="dimension|reference" />
        <attr name="layout_shadowColor" format="color|reference" />
        <attr name="layout_roundRadius" format="dimension|reference" />
        <attr name="layout_roundRadiusLT" format="dimension|reference" />
        <attr name="layout_roundRadiusRT" format="dimension|reference" />
        <attr name="layout_roundRadiusRB" format="dimension|reference" />
        <attr name="layout_roundRadiusLB" format="dimension|reference" />
        <attr name="layout_solidColor" format="color|reference" />
        <attr name="layout_spaceShadow" format="boolean|reference" />
        <attr name="layout_noSolid" format="boolean|reference" />
    </declare-styleable>
    <declare-styleable name="ShadowLinearLayout_Layout">
        <attr name="layout_shadowX" />
        <attr name="layout_shadowY" />
        <attr name="layout_shadowRadius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_roundRadius" />
        <attr name="layout_roundRadiusLT" />
        <attr name="layout_roundRadiusRT" />
        <attr name="layout_roundRadiusRB" />
        <attr name="layout_roundRadiusLB" />
        <attr name="layout_solidColor" />
        <attr name="layout_noSolid" />
    </declare-styleable>
    <declare-styleable name="ShadowRelativeLayout_Layout">
        <attr name="layout_shadowX" />
        <attr name="layout_shadowY" />
        <attr name="layout_shadowRadius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_roundRadius" />
        <attr name="layout_roundRadiusLT" />
        <attr name="layout_roundRadiusRT" />
        <attr name="layout_roundRadiusRB" />
        <attr name="layout_roundRadiusLB" />
        <attr name="layout_solidColor" />
        <attr name="layout_noSolid" />
    </declare-styleable>
    <!-- 点-->
    <declare-styleable name="MenuPointView">
        <attr name="menu_point_width" format="dimension" />
        <attr name="menu_point_color" format="color|reference" />
        <attr name="menu_number" format="integer" />
        <attr name="menu_type" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <!--折叠textview-->
    <declare-styleable name="ExpandableTextView">
        <attr name="expand_text_size" format="dimension|reference" />
        <attr name="expand_text_color" format="color|reference" />
        <attr name="expand_iv_icon" format="reference" />
        <attr name="expand_text_max_line" format="integer" />
    </declare-styleable>

    <declare-styleable name="RadioTabLayout">
        <attr name="radioSelectBackground" format="reference" />
        <attr name="radioDefaultBackground" format="reference" />
        <attr name="radioSelectTexSize" format="dimension|reference" />
        <attr name="radioDefaultTexSize" format="dimension|reference" />
        <attr name="radioSelectTextColor" format="color|reference" />
        <attr name="radioDefaultTextColor" format="color|reference" />
        <attr name="radioHeight" format="dimension|reference" />
        <attr name="radioSelectTypeface" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
        </attr>
        <attr name="radioDefaultTypeface" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CoordinatorTabLayout">
        <attr name="contentScrim" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="living_style">
        <attr name="line_number" format="integer" />
        <attr name="line_width" format="dimension" />
        <attr name="line_color" format="color" />
        <attr name="line_duration" format="float" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>

</resources>