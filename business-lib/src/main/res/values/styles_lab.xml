<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标签样式-->
    <style name="BusinessLabStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 半圆角标签部分-->
    <!-- 背景色：#ff5e5e,文本：10sp，白色-->
    <style name="BusinessLabStyleHalfRound_FF5E5E" parent="@style/BusinessLabStyleBase">
        <item name="android:background">@drawable/business_shape_half_round_ff5e5e</item>
        <item name="android:textSize">@dimen/business_text_size_10sp</item>
        <item name="android:textColor">@color/business_text_color_ffffff</item>
        <item name="android:paddingStart">@dimen/dp_2</item>
        <item name="android:paddingEnd">@dimen/dp_2</item>
    </style>

