        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/dp_4</item>
        <item name="android:layout_marginBottom">@dimen/dp_4</item>
        <item name="android:textSize">@dimen/business_text_size_8sp</item>
