<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:scaleType="fitXY">

    <com.rm.business_lib.wedgit.BusinessAdImageView
        android:id="@+id/banner_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_176"
        android:scaleType="fitXY" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dp_176"
        android:scaleType="fitXY"
        android:src="@drawable/business_banner_bg" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/banner_ad_tv"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_14"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/business_ad"
        android:textColor="@color/businessWhite"
        android:textSize="@dimen/business_text_size_8sp"
        android:visibility="gone"
        app:rv_backgroundColor="@color/business_color_4c333333"
        app:rv_cornerRadius="@dimen/dp_4" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/banner_ad_close"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_6"
        android:src="@drawable/business_icon_swipe_delete" />
</FrameLayout>
