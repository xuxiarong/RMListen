<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="debug.DemoActivity">
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoDataBindBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="数据绑定"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoSingleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demoDataBindBtn"
        android:layout_marginTop="10dp"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="单ItemType的Rv"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoSingleClickRvBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demoSingleBtn"
        android:layout_marginTop="10dp"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="单ItemType的Rv(带点击)"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoMultiRvBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demoSingleClickRvBtn"
        android:layout_marginTop="10dp"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="多ItemType的Rv"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoMultiVmRvBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/demoMultiRvBtn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="多ItemType的Rv(带点击)"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoSwipeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/demoMultiVmRvBtn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="侧滑删除"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoRvTopBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/demoSwipeBtn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="吸顶效果"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/demoSwipeActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/demoSwipeBtn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/business_text_color_333333"
        android:text="滑动关闭播放页"
        />

</androidx.constraintlayout.widget.ConstraintLayout>