<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.rm.module_main.viewmodel.HomeMainViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/activity_material_design"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_19"
            android:src="@drawable/business_home_nav_bg"
            />

        <com.rm.module_main.customview.bottomtab.BottomTabView
            android:id="@+id/mainTab"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/main_bg_tab_corner"
            android:layout_gravity="bottom"
            />

    </FrameLayout>
</layout>
