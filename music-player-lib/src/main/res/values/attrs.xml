<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义圆角ImageView-->
    <declare-styleable name="MusicRoundImageView">
        <attr name="image_type" />
        <attr name="image_scale" />
        <attr name="image_borderRadius" />
        <attr name="image_top_left" />
        <attr name="image_top_right" />
        <attr name="image_bottom_left" />
        <attr name="image_bottom_right" />
    </declare-styleable>
    <attr name="image_borderRadius" format="dimension" />
    <attr name="image_type">
        <enum name="image_circle" value="0" />
        <enum name="image_round" value="1" />
    </attr>
    <attr name="image_scale">
        <enum name="image_crop" value="0" />
        <enum name="image_fit" value="1" />
    </attr>
    <attr name="image_top_left" format="boolean" />
    <attr name="image_top_right" format="boolean" />
    <attr name="image_bottom_left" format="boolean" />
    <attr name="image_bottom_right" format="boolean" />
    <!--唱片机-->
    <declare-styleable name="MusicJukeBoxBackgroundLayout">
        <attr name="backgroundEnable" format="boolean"/>
    </declare-styleable>
    <!--背景虚化-->
    <declare-styleable name="MusicBackgroungBlurView">
        <attr name="blurBlurRadius" format="dimension"/>
        <attr name="blurDownsampleFactor" format="float"/>
        <attr name="blurOverlayColor" format="color"/>
        <attr name="blurFramRadius" format="dimension"/>
        <attr name="blurTopLeft" format="boolean"/>
        <attr name="blurTopRight" format="boolean"/>
        <attr name="blurBottomLeft" format="boolean"/>
        <attr name="blurBottomRight" format="boolean"/>
    </declare-styleable>
    <!--唱片机-->
    <declare-styleable name="MusicJukeBoxCoverPager">
        <!--旋转一圈耗时,单位秒-->
        <attr name="musicJukeRotationDurtion" format="integer"/>
    </declare-styleable>
    <!--迷你唱片机-->
    <declare-styleable name="MusicJukeBoxViewSmall">
        <!--唱片机是否自行获得焦点-->
        <attr name="musicMiniJukeEnable" format="boolean"/>
        <attr name="musicMiniJukeRotationDurtion" format="integer"/>
    </declare-styleable>
    <!--悬浮窗-->
    <declare-styleable name="MusicWindowPlayer">
        <!--横向间距-->
        <attr name="musicWinHorMagin" format="dimension"/>
    </declare-styleable>
    <!--悬浮窗-->
    <declare-styleable name="MusicPlayerWindow">
        <!--横向间距-->
        <attr name="musicPlayerWinHorMagin" format="dimension"/>
    </declare-styleable>
    <!--Title-->
    <declare-styleable name="MusicCommentTitleView">
        <attr name="musicCommentTitle" format="string" />
        <attr name="musicCommentTitleColor" format="color" />
        <attr name="musicCommentTitleSize" format="dimension"></attr>
        <attr name="musicCommentSubTitle" format="string" />
        <attr name="musicCommentSubTitleColor" format="color" />
        <attr name="musicCommentSubTitleSize" format="dimension"></attr>
        <attr name="musicCommentBackRes" format="reference" />
        <attr name="musicCommentMenuRes" format="reference" />
    </declare-styleable>
    <!--歌词显示控件-->
    <declare-styleable name="MusicLrcView">
        <!--当歌词为空的提示-->
        <attr name="musicLrcEmptyTips" format="string"></attr>
        <!--歌词文本颜色-->
        <attr name="musicLrcTextColor" format="color"></attr>
        <!--歌词文本大小-->
        <attr name="musicLrcTextSize" format="dimension"></attr>
        <!--歌词高亮文本颜色-->
        <attr name="musicLrcLightTextColor" format="color"></attr>
        <!--歌词高亮文本大小-->
        <attr name="musicLrcLightTextSize" format="dimension"></attr>
        <!--歌词之间的的高度-->
        <attr name="musicLrcLineHeight" format="dimension"></attr>
        <!--时间字体颜色-->
        <attr name="musicLrcTimeTextColor" format="color"></attr>
        <!--时间字体大小-->
        <attr name="musicLrcTimeTextSize" format="dimension"></attr>
        <!--手指拖动歌词底部线条颜色-->
        <attr name="musicLrcBottomLineColor" format="color"></attr>
    </declare-styleable>
    <!--扇形-->
    <declare-styleable name="MusicFanLayout">
        <!--扇形颜色-->
        <attr name="trashColor" format="color"></attr>
    </declare-styleable>
    <!--圆形进度条-->
    <declare-styleable name="CircleProgressBar">
        <!--文字大小-->
        <attr name="circlePrgTextSize" format="dimension"></attr>
        <!--文字颜色-->
        <attr name="circlePrgTextColor" format="color"></attr>
        <!--完成提示文字-->
        <attr name="circlePrgSuccessText" format="string"></attr>
        <!--圆心颜色-->
        <attr name="circlePrgCircleColor" format="color"></attr>
        <!--进度条颜色、扇形、背景颜色-->
        <attr name="circlePrgProgressColor" format="color"></attr>
        <!--开始角度-->
        <attr name="circlePrgStartAngle" format="integer"></attr>
        <!--最大进度阈值-->
        <attr name="circlePrgMaxProgress" format="integer"></attr>
        <!--最小进度阈值-->
        <attr name="circlePrgMiniProgress" format="integer"></attr>
        <!--是否是镂空的进度条-->
        <attr name="circlePrgIsSolid" format="boolean"></attr>
        <!--是否显示文本进度-->
        <attr name="circlePrgIsShowText" format="boolean"></attr>
        <!--进度条边框宽度-->
        <attr name="circlePrgBorder" format="dimension"></attr>
    </declare-styleable>

    <!--扇形菜单的属性-->
    <declare-styleable name="MusicArcMenuView">
        <!--圆形半径-->
        <attr name="arcMenuRadius" format="dimension"></attr>
        <!--圆形角度-->
        <attr name="arcMenuAngle" format="integer"></attr>
        <!--菜单展开动画时长-->
        <attr name="arcExpandOpenDurtion" format="integer"></attr>
        <!--菜单关闭动画时长-->
        <attr name="arcExpandCloseDurtion" format="integer"></attr>
        <!--默认的Btn ICON-->
        <attr name="arcBtnIcon" format="reference"></attr>
        <!--是否自动创建一个默认的弧形菜单，位于ParentView右下角-->
        <attr name="arcAutoCreateDefaultMenus" format="boolean"></attr>
        <!--菜单抛锚位置-->
        <attr name="arcDropPosition">
            <enum name="left_top" value="0"></enum>
            <enum name="left_bottom" value="1"></enum>
            <enum name="right_bottom" value="2"></enum>
            <enum name="right_top" value="3"></enum>
            <enum name="center" value="4"></enum>
            <enum name="left" value="5"></enum>
            <enum name="top" value="6"></enum>
            <enum name="right" value="7"></enum>
            <enum name="bottom" value="8"></enum>
        </attr>
        <!--菜单初始时在View中的位置-->
        <attr name="arcGravity">
            <flag name="top" value="48" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="bottom" value="80" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="center" value="17" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="start" value="8388611" />
            <flag name="end" value="8388613" />
        </attr>
    </declare-styleable>
</resources>