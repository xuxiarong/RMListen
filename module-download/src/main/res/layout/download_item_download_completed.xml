<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="itemBean"
            type="com.rm.module_download.bean.DownloadChapterItemBean" />

        <variable
            name="viewModel"
            type="com.rm.module_download.viewmodel.DownloadChapterSelectionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_9"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_9">

        <ImageView
            android:id="@+id/download_iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_14"
            android:src="@drawable/download_ic_item_checked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/download_iv_book_cover"
            corner="@{4.0f}"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="#999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/download_iv_check"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/download_tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Lulu Todd"
            android:textColor="@color/business_text_color_333333"
            android:textSize="@dimen/business_text_size_16sp"
            app:layout_constraintLeft_toRightOf="@id/download_iv_book_cover"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/download_iv_book_cover"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_tv_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/download_ic_speaker"
                android:text="我是中国人"
                android:textColor="@color/business_text_color_666666"
                android:textSize="@dimen/business_text_size_12sp" />

            <TextView
                android:id="@+id/download_tv_chapter_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/download_ic_book_chapter"
                android:text="23集"
                android:layout_marginLeft="@dimen/dp_12"
                android:textColor="@color/business_text_color_666666"
                android:textSize="@dimen/business_text_size_12sp" />

            <TextView
                android:id="@+id/download_tv_downloaded_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/download_ic_downloaded"
                android:text="8集"
                android:layout_marginLeft="@dimen/dp_12"
                android:textColor="@color/business_text_color_666666"
                android:textSize="@dimen/business_text_size_12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>