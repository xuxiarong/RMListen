<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="itemBean"
            type="com.rm.business_lib.bean.download.DownloadAudioBean" />

        <variable
            name="viewModel"
            type="com.rm.module_download.viewmodel.DownloadMainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/download_iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            isVisible="@{viewModel.isEdit}"
            android:paddingRight="@dimen/dp_14"
            android:src="@drawable/download_ic_item_checked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/download_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemBean.audioName}"
            android:textColor="@color/business_text_color_333333"
            android:textSize="@dimen/business_text_size_16sp"
            app:layout_constraintLeft_toRightOf="@+id/download_iv_check"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/download_tv_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemBean.audioName}"
            android:textColor="@color/business_text_color_666666"
            android:textSize="@dimen/business_text_size_14sp"
            app:layout_constraintLeft_toRightOf="@id/download_iv_check"
            app:layout_constraintTop_toBottomOf="@id/download_tv_name" />

        <ProgressBar
            android:id="@+id/download_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/download_iv_check"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/download_tv_book" />

        <TextView
            android:id="@+id/download_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.5M/32M"
            android:textColor="@color/business_text_color_b1b1b1"
            android:textSize="@dimen/business_text_size_12sp"
            app:layout_constraintLeft_toRightOf="@+id/download_iv_check"
            app:layout_constraintTop_toBottomOf="@id/download_progress_bar" />

        <TextView
            android:id="@+id/download_tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/43MB/s"
            android:textColor="@color/business_text_color_b1b1b1"
            android:textSize="@dimen/business_text_size_12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/download_progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>